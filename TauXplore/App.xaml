<Application x:Class="TauXplore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TauXplore"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeCommons;component/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/ThemeCommons.MaterialDesign;component/Themes/Generic.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Templates/Property.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Templates/Atom.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/TabItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="TitleBar" Color="{DynamicResource DarkColor}" Opacity=".9"/>
            <SolidColorBrush x:Key="MaterialDesignBody" Color="{DynamicResource DarkColor}"/>
            <SolidColorBrush x:Key="Background" Color="{DynamicResource LightColor}" Opacity=".7"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
